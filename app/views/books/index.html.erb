<!DOCTYPE html>
<html lang="ja">
 <head>
  <meta charset="UTF-8" />
  <title>Bookers</title>
 </head>

 <body>
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
  <h1>Books</h1>
  <table>
   <thead>
    <tr>
     <th>title</th>
     <th>body</th>
     <th></th>
    </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
       <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
      <td><%= link_to "destroy", book, method: :delete, "data-confirm" => "Are you sure?" %></td>
     <% end %>
   </tbody>
  </table>

<h2>New book</h2>
   <% if @book.errors.any? %>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %>error</li>
     <% end %>
    </ul>
   <% end %>

  <%= form_with model: @book, url:'/books', local:true do |f| %>


  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book " %>

  <% end %>
 </body>
</html>




